{
    "swagger": "2.0",
    "info": {
        "description": "REST API.",
        "title": "REST API for recipes backend.",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:4000",
    "basePath": "/",
    "paths": {
        "/recipes": {
            "get": {
                "description": "get all recipes",
                "produces": [
                    "application/json"
                ],
                "summary": "Get all recipes",
                "operationId": "allrecipes",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Recipe"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "get a recipe by ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Add a recipe",
                "operationId": "addrecipe",
                "parameters": [
                    {
                        "description": "Recipe",
                        "name": "recipe",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Recipe"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/model.Recipe"
                        }
                    }
                }
            }
        },
        "/recipes/generate": {
            "post": {
                "description": "Generate recipes",
                "produces": [
                    "application/json"
                ],
                "summary": "Generate recipe",
                "operationId": "generaterecipe",
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Recipe"
                            }
                        }
                    }
                }
            }
        },
        "/recipes/{id}": {
            "get": {
                "description": "get a recipe by ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Get recipe by ID",
                "operationId": "getrecipe",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Recipe ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.Recipe"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.Category": {
            "type": "string",
            "enum": [
                "DRINK",
                "MAIN_COURSE",
                "DESSERT",
                "APPETIZER"
            ],
            "x-enum-varnames": [
                "CategoryDrink",
                "CategoryMainCourse",
                "CategoryDessert",
                "CategoryAppetizer"
            ]
        },
        "model.Ingredient": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "quantity": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "model.Recipe": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "category": {
                    "$ref": "#/definitions/model.Category"
                },
                "description": {
                    "type": "string"
                },
                "ingredients": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.Ingredient"
                    }
                },
                "name": {
                    "type": "string"
                },
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}